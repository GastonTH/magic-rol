<div class="container p-4">
    <div class="row">

        {{#each ficha}}

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank"> <!--coge el campoaw-->
                        <h3 class="card-title text-uppercase">{{title}}</h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="/ficha/delete/{{id}}" class="btn btn-danger"> Borrar Ficha</a>
                    <a href="/ficha/edit/{{id}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay fichas guardadas, <a href="/ficha/add">crealo</a></p>
                </div>
            </div>
        {{/each}}

    </div>
</div>