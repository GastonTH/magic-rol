<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/ficha/edit/{{ficha.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{ficha.title}}" class="form-control" name="title" placeholder="titulo" />
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{ficha.url}}" class="form-control" name="url" placeholder="url" />
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion">{{ficha.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>